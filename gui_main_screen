class Title():
    def __init__(self, dic_title):
        self.title_image = pygame.image.load(r"{0}".format(dic_title["path_image"]))
        self.title_image = pygame.transform.scale(self.title_image, (dic_title[""]))

class Menu():
    def __init__(self, dic_menu):
        self.table_image = pygame.image.load(r"{0}".format(dic_menu["path_image_table"]))
        self.table_image = pygame.transform.scale(self.table_image, (dic_menu[""]))